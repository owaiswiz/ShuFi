<div class="bg-white">
  <div class="w-1/2 lg:w-1/3 m-4 px-4 py-2 shadow-md text-lg">
    <div class="font-heading text-2xl text-indigo-light py-4 mb-4">Manage Devices</div>
    <div v-for="device in devices" class="my-8">
      <div v-if="device.loading" class="flex justify-center px-4 py-px">
        <div class="loader"></div>
      </div>

      <div v-else class="flex-grow flex items-center justify-between">
        <div v-if="!device.editing" class="text-md px-4 py-2 mr-4">{{ device.name }}</div>
        <input v-else v-model="device.mac" class="flex-grow mr-4 w-full rounded-full px-4 py-2 text-grey-darker text-sm focus:outline-none border border-indigo"
          type="text" placeholder="Mac Address">

        <div class="flex items-baseline cursor-pointer select-none">
          <div v-show="!device.editing" class="text-sm text-green-light hover:text-green-lighter mr-4" @click.prevent="allow(device)">Allow</div>
          <div v-show="!device.editing" class="text-sm text-red-light hover:text-red-lighter mr-4" @click.prevent="deny(device)">Deny</div>
          <div v-if="device.editing" class="text-sm text-blue-light hover:text-blue-lighter" @click.prevent="device.editing = false">Done</div>
          <div v-else class="text-sm text-blue-light hover:text-blue-lighter" @click.prevent="device.editing = true">Edit</div>
        </div>
      </div>
    </div>
  </div>
</div>
